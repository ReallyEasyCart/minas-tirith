
<!-- Footer content -->
<footer id="footer" role="contentinfo" class="layout-container">
    <div class="layout-container-inner pure-g">
        
        {% block footer_address %}
            <!-- address -->
            <div class="footer-block footer-address pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-4">
                <p class="h2">{{ company.name }}</p>

                {{ footer.address }}

                <p>Registered in England &amp; Wales<br>Company Number 04640660</p>
            </div>
        {% endblock %}

        <div class="footer-block footer-links pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-4">
            <ul class="nav nav-stripped">
                {% if PRIVACY_POLICY_URL %}<li><a href="{{ PRIVACY_POLICY_URL }}">Privacy Policy</a></li>{% endif %}
                <li><a title="Review your cookie settings with our site." onclick="CookiePolicy.show(); return false;" href="#">Cookie Policy &amp; Settings</a></li>
                {% if TERMS_POLICY_URL %}<li><a href="{{ TERMS_POLICY_URL }}">Terms &amp; Conditions</a></li>{% endif %}
            </ul>
        </div>


        {% block footer_social_links %}
            <!-- social links -->
            <div class="footer-block footer-social-links pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-4">

                {% if setup.show_facebook %}
                    <a href="{{ setup.facebook_url }}">
                        <i class="fa fa-facebook fa-lg"></i>
                    </a>
                {% endif %}

                {% if setup.show_twitter %}
                    <a href="{{ setup.twitter_url }}">
                        <i class="fa fa-twitter fa-lg"></i>
                    </a>
                {% endif %}

                {% if setup.show_youtube %}
                    <a href="{{ setup.youtube_url }}">
                        <i class="fa fa-youtube fa-lg"></i>
                    </a>
                {% endif %}

                {% if setup.show_digg %}
                    <a href="{{ setup.digg_url }}">
                        <i class="fa fa-digg fa-lg"></i>
                    </a>
                {% endif %}

                {% if setup.show_linkedin %}
                    <a href="{{ setup.linkedin_url }}">
                        <i class="fa fa-linkedin fa-lg"></i>
                    </a>
                {% endif %}

                {# <a href="/feed.rss">
                    <i class="fa fa-rss fa-lg"></i>
                </a>

                <a href="/sitemap.xml">
                    <i class="fa fa-sitemap fa-lg"></i>
                </a> #}

                <a href="#header" title="Back to top">
                    <i class="fa fa-arrow-up fa-lg"></i>
                </a>

                {# <a href="{{ footer.contact_page }}">
                    <i class="fa fa-envelope fa-lg"></i>
                </a> #}

            </div>
        {% endblock %}

        {% block footer_copyright %}
        <!-- copyright notice -->
        <div class="footer-copyright pure-u-1">
            <small>
                {{ COPYRIGHT_L }} {{ date.year }} {{ company.name }}. {{ FOOTER_ACM_LINE_1 }} {{ FOOTER_ACM_LINE_2 }}
            </small>

        </div>
        {% endblock %}

    </div>
</footer>
